    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["es2019", "dom"],
    "module": "esNext",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
